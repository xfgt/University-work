% mytitlepage.sty - Custom Title Page Style

\ProvidesPackage{mytitlepage}

% Required packages
\RequirePackage{xcolor}
\RequirePackage{graphicx}
\RequirePackage{hyperref}

% Define command for the title page
\newcommand{\makemytitle}{
    \begin{titlepage}
        \centering
        \vspace*{2cm}
        
        {\Huge \bfseries \@title}\par
        \vspace{1.5cm}
        
        {\Large \@author}\par
        \vspace{1cm}
        
        {\Large \texttt{\@email}}\par
        \vspace{0.5cm}
        
        {\Large \href{\@website}{\@websitename}}\par
        \vfill
        
        {\large \@date}\par
        \vspace*{2cm}
    \end{titlepage}
}

% Define user input fields
\newcommand{\email}[1]{\def\@email{#1}}
\newcommand{\website}[2]{\def\@website{#1} \def\@websitename{#2}}

% Ensure proper handling of user input
\newcommand{\@email}{}
\newcommand{\@website}{}
\newcommand{\@websitename}{}

% Load hyperref if not already loaded
\AtBeginDocument{
    \hypersetup{
        colorlinks=true,
        urlcolor=blue
    }
}
